<div class="p-8">
  <div class="flex gap-4 mb-8">
    <a href="/readwise/articles" class="text-blue-500 hover:text-blue-700">Back to Articles</a>
    <a href="<%= @article['source_url'] %>" target="_blank" class="text-blue-500 hover:text-blue-700">Go to source</a>
    <a href="https://read.readwise.io/read/<%= @article['id'] %>" target="_blank" class="text-blue-500 hover:text-blue-700">Open in Readwise</a>
  </div>

  <h1 class="text-3xl font-bold mb-6"><%= @article['title'] %></h1>

  <section class="mb-8">
    <h2 class="text-2xl font-semibold mb-3">AI Generated Summary</h2>
    <p class="text-gray-700 leading-relaxed"><%= @article['summary'] %></p>
  </section>

  <section class="mb-8">
    <h2 class="text-2xl font-semibold mb-3">Notes</h2>
    <p class="text-gray-700 leading-relaxed"><%= @article['notes'] %></p>
  </section>

  <section class="mb-8">
    <h2 class="text-2xl font-semibold mb-3">Content</h2>
    <p class="text-gray-700 leading-relaxed"><%= @article['content'] %></p>
  </section>

  <section>
    <h2 class="text-2xl font-semibold mb-3">Raw Data</h2>
    <pre class="bg-gray-100 p-4 rounded-lg overflow-auto"><%= JSON.pretty_generate(@article) %></pre>
  </section>
</div>