<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold text-gray-900 mb-4">Readwise Articles</h1>
  <p class="text-gray-600 text-xl mb-8">There are <%= @archive_articles.length + @new_articles.length + @feed_articles.length %> articles</p>

  <div class="space-y-8">
    <section>
      <h2 class="text-2xl font-bold text-gray-800 mb-4">New</h2>
      <p class="text-gray-600 text-xl mb-8">There are <%= @new_articles.length %> new articles in recent 100 articles</p>
      <div class="space-y-4">
        <% @new_articles.first(5).each do |article| %>
          <div class="bg-white rounded-lg shadow-md p-6">
            <a href='/readwise/articles/<%= article['id'] %>' class="block hover:text-blue-600 transition-colors">
              <div class="flex items-center gap-4 mb-3">
                <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm"><%= article['location'] %></span>
                <span class="text-gray-500"><%= article['last_moved_at'].to_date.strftime('%Y-%m-%d') %></span>
                <span class="text-gray-500"><%= article['author'] %></span>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3"><%= article['title'] %></h3>
            </a>
            <div class="space-y-2 text-gray-600">
              <% if article['summary'].present? %>
                <p><span class="font-medium">Summary:</span> <%= article['summary'] %></p>
              <% end %>
              <% if article['notes'].present? %>
                <p><span class="font-medium">Notes:</span> <%= article['notes'] %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <section>
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Archive</h2>
      <div class="space-y-4">
        <% @archive_articles.each do |article| %>
          <div class="bg-white rounded-lg shadow-md p-6">
            <a href='/readwise/articles/<%= article['id'] %>' class="block hover:text-blue-600 transition-colors">
              <div class="flex items-center gap-4 mb-3">
                <span class="px-3 py-1 bg-gray-100 text-gray-800 rounded-full text-sm"><%= article['location'] %></span>
                <span class="text-gray-500"><%= article['last_moved_at'].to_date.strftime('%Y-%m-%d') %></span>
                <span class="text-gray-500"><%= article['author'] %></span>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3"><%= article['title'] %></h3>
            </a>
            <div class="space-y-2 text-gray-600">
              <% if article['summary'].present? %>
                <p><span class="font-medium">Summary:</span> <%= article['summary'] %></p>
              <% end %>
              <% if article['notes'].present? %>
                <p><span class="font-medium">Notes:</span> <%= article['notes'] %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <section>
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Feed</h2>
      <div class="space-y-4">
        <% @feed_articles.each do |article| %>
          <div class="bg-white rounded-lg shadow-md p-6">
            <a href='/readwise/articles/<%= article['id'] %>' class="block hover:text-blue-600 transition-colors">
              <div class="flex items-center gap-4 mb-3">
                <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm"><%= article['location'] %></span>
                <span class="text-gray-500"><%= article['last_moved_at'].to_date.strftime('%Y-%m-%d') %></span>
                <span class="text-gray-500"><%= article['author'] %></span>
              </div>
              <h3 class="text-xl font-semibold text-gray-900"><%= article['title'] %></h3>
            </a>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>